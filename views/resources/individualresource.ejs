                <% for(let i=0; i<resources.length; i++){ 
            if(resources[i]._id == classs){%>
                <tr>
                <h4>Resource Name:   <%= resources[i].name %></h4>
                 <h4>Resource  Description  <%= resources[i].description %></h4>
                  <h4> File <a target="blank" href="#"><button style="background-color:#000022;padding:10px;color:#fff;border-radius:10px;"><%= resources[i].file %></button></a></h4>
